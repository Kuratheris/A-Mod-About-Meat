<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>MeatPlant</defName>
    <label>meat plant</label>
    <description>This thing look like a plant, but that's more like a fungus, some kind of animal growing into fertile soil using roots. wtf ?</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
	  <Nutrition>0.30</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/MeatPlant2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>12</pathCost>
    <ingestible />
    <plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>MeatCube</harvestedThingDef>
			<harvestYield>10</harvestYield>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<topWindExposure>0.35</topWindExposure>
			<growDays>15</growDays>
      <immatureGraphicPath>Things/Plant/MeatPlant1</immatureGraphicPath>
			<visualSizeRange>0.3~1.4</visualSizeRange>
	  <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>
	
</Defs>